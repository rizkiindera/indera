#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>
RF24 radio(9, 8); // CE, CSN
const byte address[6] = "00001";
void setup() {
Serial.begin(9600);
radio.begin();
radio.openWritingPipe(address);
radio.setPALevel(RF24_PA_LOW);
radio.stopListening();
}
void loop() {
if (Serial.available()) {
String text = Serial.readStringUntil('\n');
text.trim();
char message[32];
text.toCharArray(message, 32);
radio.write(&message, sizeof(message));
}
}
